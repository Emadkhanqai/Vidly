@model Vidly.Models.Movie

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @DateTime.Parse(Model.ReleaseDate.ToString()).ToString("D") </li>
    <li>Date Added: @DateTime.Parse(Model.DateAdded.ToString()).ToString("D")</li>
    <li>Number In Stock: @Model.NumberInStock</li>
   
</ul>